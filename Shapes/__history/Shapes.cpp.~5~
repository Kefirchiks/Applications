int main()
{
Shape myShape; // Izveido objektu
CRec myRec;

Shape *dimension; // Norāde uz 'protected' dimension
	myShape.setDimension();
	myShape.getDimension();
   //	setDimension();
	myShape.getArea();

	myRec.printMala();

	getch();
return EXIT_SUCCESS;
}
